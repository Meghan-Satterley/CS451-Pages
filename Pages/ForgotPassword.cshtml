@page
@using CS451_Team_Project.Areas.Identity.Pages.Account
@using CS451_Team_Project.Models
@model ForgotPasswordModel
@{
    Layout = null;
    //Model.OnGet(HttpContext.RequestServices.GetService(typeof(AppDbContext)) as AppDbContext, HttpContext.Request.Query["email"]);
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/custom.css">
    <link rel="stylesheet" href="~/css/StyleSheet.css">
</head>

<div class="row justify-content-center mt-7">
    <div class="col-lg-5 text-center">
        <div class="card mt-5">
            <div class="card-body py-5 px-lg-5">
                <h3 class="fw-normal text-dark mt-4">
                    Reset Password
                </h3>
                <p class="mt-4 mb-1">
                    Enter the 6-digit code from Google Authenticator and your new password.
                </p>

                <form method="post">
                    <div class="mb-3">
                        <label for="Code" class="form-label">Google Authenticator Code</label>
                        <input asp-for="Input.Code" type="text" class="form-control text-center" maxlength="6" autofocus="" required>
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input asp-for="Input.Password" class="form-control text-center" autocomplete="new-password" required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control text-center" autocomplete="new-password" required />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-purple btn-lg w-100 hover-lift-light mt-4">
                        Reset Password
                    </button>
                </form>

            </div>
        </div>

        <p class="text-center text-muted mt-4">
            Remembered your password?
            <a asp-page="NewLogin" class="text-decoration-none ms-2">Sign in</a>
        </p>
    </div>
</div>
