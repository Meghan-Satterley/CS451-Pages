@page "/"
@model AboutModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.0.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/about-custom.css">
    <link rel="stylesheet" href="~/css/about.css">
    <link rel="stylesheet" href="~/css/custom.css">
    <script defer src="~/js/app.js"></script>

</head>

<body>
    <!-- HEADER -->
    <header class="header" id="header">
        <nav class="nav container">
            <!--need to add logo picture-->
            <a href="#" class="nav_logo">Rabbit<span>Coin</span></a>

            <div class="nav_menu" id="nav-menu">
                <ul class="nav_list">

                    <li class="nav_item">
                        <form method="get">
                            <button type="submit" asp-page="Register" class="nav_btn">
                                <!-- link to register html-->
                                Register
                            </button>

                            <button type="submit" asp-page="newLogin" class="nav_btn">
                                <!-- link login page -->
                                Login
                            </button>
                        </form>
                    </li>
                </ul>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        </nav>
    </header>

    <!-- MAIN -->
    <main class="main">

        <!-- Welcome -->
        <section class="welcome hidden" id="welcome">
            <div class="welcome_container container grid">
                <div class="welcome_data">
                    <h3 class="section_subtitle">
                        Let <span>Us</span>
                    </h3>

                    <h2 class="section_title">
                        Track your budget with rabbit speed!
                    </h2>

                    <p class="welcome_description">
                        RabbitCoin is an online budget tracking resource that allows users to upload
                        bank statements to their accounts which are then organized into expense tracking
                        catagories and charts.
                    </p>

                    <a asp-page="Register" class="button">
                        <!-- link register page -->
                        Sign Up Now
                    </a>
                </div>

                <div class="welcome_image">
                    <img src="~/images/welcome.png" alt="Picture of charts and graphs">
                </div>
            </div>
        </section>

        <!-- How It Works -->
        <section class="demo hidden" id="demo">
            <h3 class="section_subtitle">
                So, <span>Here's</span>
            </h3>

            <h2 class="section_title">
                How It Works
            </h2>

            <div class="demo_container container grid">
                <article class="demo_card">
                    <i class="ri-file-upload-fill demo_icon"></i>

                    <h2 class="demo_title">Upload</h2>

                    <p class="demo_description">
                        Upload your bank statements and watch as RabbitCoin
                        organizes them into easy to read charts.
                    </p>
                </article>

                <article class="demo_card">
                    <i class="ri-line-chart-fill demo_icon"></i>

                    <h2 class="demo_title">Track</h2>

                    <p class="demo_description">
                        Compare budget charts, review finacial tips, and track expenses over time.
                    </p>
                </article>

                <article class="demo_card">
                    <i class="ri-money-dollar-circle-fill demo_icon"></i>

                    <h2 class="demo_title">Save</h2>

                    <p class="demo_description">
                        Use helpful tips and guides to make informed budgetting decisions.
                    </p>
                </article>
            </div>
        </section>

        <!-- Budget Tracker and Tips -->
        <section class="tracker hidden" id="tracker">
            <div class="tracker_container container grid">
                <div class="tracker_content">
                    <div class="tracker_data">
                        <h3 class="tracker_subtitle">
                            View your
                        </h3>

                        <h1 class="tracker_title">
                            Budget
                        </h1>

                        <h3 class="tracker_grade">
                            at a glance.
                        </h3>

                        <p class="tracker_description">
                            RabbitCoin offers an array of expense tracking charts.
                            Monthly pie charts categorize a users transactions allowing for easy review of spending habits.

                        </p>

                    </div>
                </div>

                <div class="tracker_image">
                    <img src="~/images/Budget.png" alt="Picture of charts and graphs">
                </div>
            </div>
        </section>

        <section class="tracker hidden" id="tracker">
            <div class="tracker_container container grid">

                <div class="tracker_image">
                    <img src="~/images/finance.png" alt="Picture of charts and graphs">
                </div>

                <div class="tracker_content">
                    <div class="tracker_data">
                        <h3 class="tracker_subtitle_mirror">
                            Get new
                        </h3>

                        <h1 class="tracker_title">
                            Finance
                        </h1>

                        <h3 class="tracker_grade_mirror">
                            tips in a flash.
                        </h3>

                        <p class="tracker_description">
                            RabbitCoin provides users with up and coming budgetting and financial tips.
                            Boosting financial literacy and helping users invest wisely.
                        </p>

                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="footer_container container grid">
            <div>
                <h1 class="footer_title">
                    Rabbit<span>Coin</span>
                </h1>

                <h2 class="footer_grade">
                    Track your budget with rabbit speed!
                </h2>
            </div>

            <div class="footer_social">
                <a href="https://github.com/Joseph-Sailor-Usher/CS451-Group-Project" target="_blank" class="footer_social-link">
                    <i class="bi bi-github"></i>
                </a>
            </div>

            <span class="footer_copy">
                &#169; 2024 All rights reserved
            </span>
        </div>

    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>
</html>
